<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <Button
        android:id="@+id/skazka"
        android:layout_width="230dp"
        android:layout_height="75dp"
        android:padding="50px"
        android:text="Сказки"
        android:textSize="45px"
        android:textColor="#333333"
        android:background="@drawable/back"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@id/stix"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/stix"
        android:layout_width="230dp"
        android:layout_height="75dp"
        android:padding="50px"
        android:text="Стихотворения"
        android:textSize="45px"
        android:textColor="#333333"
        android:background="@drawable/back"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@id/adventure"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/skazka"

        />

    <Button
        android:id="@+id/adventure"
        android:layout_width="230dp"
        android:layout_height="75dp"
        android:padding="50px"
        android:text="Приключения"
        android:textSize="45px"
        android:background="@drawable/back"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="#333333"
        app:layout_constraintTop_toBottomOf="@id/stix" />

    <Button
        android:id="@+id/menu"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:layout_marginBottom="4dp"
        android:padding="50px"
        android:text="Перейти \n к выбору\n профиля"
        android:textSize="45px"
        android:textColor="#333333"
        android:background="@drawable/back"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>