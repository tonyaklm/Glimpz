<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/knar_now"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/knar"
            android:padding="50px"
            android:text="Кому на Руси жить хорошо (Н.А.Некрасов)"
            android:textSize="45px"
            android:textStyle="bold|italic"
            android:textColor="#333333"
            android:background="@drawable/back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.078" />

        <TextView
            android:id="@+id/text_knar"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="#333333"

            android:textStyle="bold|italic"
            app:layout_constraintTop_toBottomOf="@id/knar_now"
            android:text="Поэма «Кому на Руси жить хорошо» – это любимое произведение Некрасова, идею которого он вынашивал не один год, мечтая отразить в поэме все наблюдения о крестьянской жизни. Немалый срок – 14 лет – заняло и написание произведения, причем в процессе работы над ним поэт несколько раз изменял первоначальный замысел. Неудивительно, что композиция поэмы «Кому на Руси жить хорошо» считается сложной, а порою о ней отзываются как о рыхлой и не до конца сформированной.
        "/>

        <Button
            android:id="@+id/newtest"
            android:layout_width="230dp"
            android:layout_height="70dp"
            android:textColor="#333333"
            android:background="@drawable/back"
            android:padding="50px"
            android:text="Составить свой тест"
            android:textSize="45px"
            android:textStyle="bold|italic"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/text_knar" />
        <Button
            android:id="@+id/menu"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginBottom="44dp"
            android:background="@drawable/back"
            android:padding="50px"
            android:text="Меню"
            android:textColor="#333333"
            android:textSize="45px"
            android:textStyle="bold|italic"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/like"
            app:layout_constraintEnd_toEndOf="@+id/like"
            app:layout_constraintHorizontal_bias="0.584"
            app:layout_constraintLeft_toLeftOf="@id/newtest"
            app:layout_constraintRight_toRightOf="@id/newtest"
            app:layout_constraintStart_toStartOf="@+id/like" />

        <Button
            android:id="@+id/like"
            android:layout_width="230dp"
            android:layout_height="70dp"
            android:background="@drawable/back"
            android:padding="50px"
            android:text="В избранное"
            android:textColor="#333333"
            android:textSize="45px"

            app:layout_constraintLeft_toLeftOf="@id/newtest"
            app:layout_constraintRight_toRightOf="@id/newtest"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newtest"
            app:layout_constraintVertical_bias="0.159"
            tools:layout_editor_absoluteX="90dp" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>